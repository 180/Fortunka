<% title "Logowanie" %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="login">
    <%= f.input :email, :required => true, :autofocus => true ,:input_html => {:size=>25} %>
    <%= f.input :password, :required => true ,:input_html => {:size=>24} %>
    
  </div>
  <div class="log">
	<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <span class="loginPos"><%= f.button :submit, "Zaloguj siÄ™" %></span>
  </div>
<% end %>
