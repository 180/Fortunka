<% title "Twoja fortunka:" %>

<div id="elementShow">
	<div class="element">
	<b><%= @fortune.author %></b><br/>
	<p><span class="quote"><%=@fortune.body%></span>
	<div class="options">
	<% if can? :update, @fortune %>
		<%= link_to "Edytuj", edit_fortune_path(@fortune) %>
	<% end %>
	<% if can? :destroy, @fortune %>
		<%= link_to "UsuÅ„", @fortune, :confirm => 'Jestes pewien?', :method => :delete %>
	<% end %>
	<%= link_to "Lista", fortunes_path %>
	</div>
	</p>
	</div>
<div class="like">
<iframe src="http://www.facebook.com/plugins/like.php?href=<%=request.url%>"
        scrolling="no" frameborder="0"
        style="border:none; width:450px; height:80px">
</iframe>
		
</div>
</div>
<div id="comments">

<footer>
	<% if @fortune.comments.any? %>
    <div class="commentHeader">
		<%=image_tag("comment-icon.png", :width=>"64", :height => "64", :alt=>"Comment", :class=>"imagedropshadow")%>
		<p>Komentarze</p>
	</div>
	<% end %>
	<div class="comments-body">
	<% if @fortune.comments.any? %>
		<%= render :partial => 'comments/comment', :collection => @fortune.comments %>
	<% end %>
	</div>
<% if can? :create, Comment %>
	<p>Dodaj komentarz</p>
	<div class="cmtForm">
		<%= render :partial => 'comments/form' %>
	</div>
<% end %>
</footer>
</div>

